{
  "name": "@betalister/server",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "deploy": "firebase deploy --only functions",
    "format": "prettier --write 'src/**/*.ts' package.json tslint.json tsconfig.json",
    "lint": "tslint --project tsconfig.json",
    "logs": "firebase functions:log",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "dotenv": "^7.0.0",
    "entities": "^1.1.2",
    "firebase-admin": "^7.2.0",
    "firebase-functions": "^2.2.1"
  },
  "devDependencies": {
    "prettier": "^1.16.4",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3"
  },
  "engines": {
    "node": "8"
  }
}
